<section class="content">

    <h2>Drinks</h2>

    <table>
        <tbody>
            {{!-- Table Header --}}
            <tr>
                {{#each drinks.[0]}}
                    <th>
                        {{@key}}
                    </th>
                {{/each}}
            </tr>

            {{#each drinks}}
            <tr>
                <td>{{this.drink_id}}</td>
                <td>{{this.base_flavor}}</td>
                <td>{{this.small_price}}</td>
                <td>{{this.small_price}}</td>
                <td>{{this.can_be_hot}}</td>
                <td>{{this.is_flavored_sweetener}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p></p>

    <h2>AddOns</h2>

    <table>
        <tbody>
            {{!-- Table Header --}}
            <tr>
                {{#each addons.[0]}}
                    <th>
                        {{@key}}
                    </th>
                {{/each}}
            </tr>

            {{#each addons}}
            <tr>
                <td>{{this.add_on_id}}</td>
                <td>{{this.topping}}</td>
                <td>{{this.price}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p></p>

    <form action="/~yeoki/cs340/user" method="GET">
        <label for="target_drink"> Drink</label>
        <input type="text" id="base_flavor" name="target_drink" minlength="1" maxlength="20" required>
        <label for="target_topping"> Topping</label>
        <input type="text" id="topping" name="target_topping" minlength="1" maxlength="20" required>
        <label for="new_quantity"> Quantity</label>
        <input type="text" id="quantity" name="new_quantity" minlength="1" maxlength="20" required>

        <p></p>

        <label for="first"> First Name</label>
        <input type="text" id="first_name" name="first" minlength="1" maxlength="20" required>
        <label for="last"> Last Name</label>
        <input type="text" id="last_name" name="last" minlength="1" maxlength="20" required>
        <label for="user_email"> Email</label>
        <input type="text" id="email" name="user_email" minlength="1" maxlength="20" required>

        <p></p>

        <button type="submit">Purchase</button>
        <button type="reset">Cancel</button>
    </form>
</section>