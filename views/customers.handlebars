{{!-- jQuery for Deleting --}}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<section class="content">

    <h2>Customers</h2>

    <table id="customers-table">
        <tbody>
            {{!-- Table Header --}}
            <tr>
                <th>Delete</th>
                {{#each customers.[0]}}
                    <th>
                        {{@key}}
                    </th>
                {{/each}}
            </tr>

            {{!-- Rows --}}
            {{#each customers}}
            <tr>
                <td><button onclick="delete_customer({{[Customer ID]}})">Delete</button></td>
                <td>{{[Customer ID]}}</td>
                <td>{{[Email]}}</td>
                <td>{{[Phone Number]}}</td>
                <td>{{[First Name]}}</td>
                <td>{{[Last Name]}}</td>
                <td>{{[Number of Orders]}}</td>
                <td>{{[Number of Drinks]}}</td>
                <td>{{[Total Spent]}}</td>
                <td>{{[Drinks to Free]}}</td>
                <td>{{[Number of Free Drinks]}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <script src="delete_customer.js"></script>

    <p></p>

    <form id="add-customer-form-ajax">
        <label for="input-email" class="required-field"> Email</label>
        <input type="text" id="input-email" name="input-email" minlength="1" maxlength="20" required>
        
        <br/>

        <label for="input-phone_num"> Phone Number</label>
        <input type="number" id="input-phone_num" name="input-phone_num" minlength="1" maxlength="20">
        
        <br/>

        <label for="input-first_name" class="required-field"> First Name</label>
        <input type="text" id="input-first_name" name="input-first_name" minlength="1" maxlength="20" required>
        
        <br/>

        <label for="input-last_name" class="required-field"> Last Name</label>
        <input type="text" id="input-last_name" name="input-last_name" minlength="1" maxlength="20" required>
    
        <br/>

        <button type="submit">Register</button>
        <button type="reset">Cancel</button>
    </form>
    <script src="add_customer.js"></script>

    <p></p>

    <form id="update-customer-form-ajax">
        <label for="input-customer_id" class="required-field">Customer ID</label>
        <select name="input-customer_id" id="input-customer_id">
            <option value=""></option>
            {{#each customers}}
            <option value="{{[Customer ID]}}">{{[Customer ID]}}</option>
            {{/each}}
        </select>
        
        <br/>
        
        <label for="update-phone_num"> Phone Number</label>
        <input type="number" id="update-phone_num" name="update-phone_num" minlength="1" maxlength="20" required>
        
        <br/>

        <label for="update-first_name"> First Name</label>
        <input type="text" id="update-first_name" name="update-first_name" minlength="1" maxlength="20" required>
        
        <br/>

        <label for="update-last_name"> Last Name</label>
        <input type="text" id="update-last_name" name="update-last_name" minlength="1" maxlength="20" required>
        
        <br/>

        <button type="submit">Update Customer</button>
        <button type="reset">Cancel</button>
    </form>
    <script src="update_customer.js"></script>
</section>
